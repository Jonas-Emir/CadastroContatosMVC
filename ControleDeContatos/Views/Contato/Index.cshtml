@model List<ContatoModel>
@{
    ViewData["Title"] = "Listagem de contatos";
}

<style>
    .card-table{
        padding: 29px 29px;
        background-color: white;
        border-radius: 5px;
        margin-top: 10px;
    }

    .display {
        background-color: #f9f9f9;
        border-radius: 5px;
    }

    .title-position{
        display:flex;
        justify-content: space-between;
        align-items:center;
        margin-top: 30px;
    }

</style>

<div class="text-center">

    @if (TempData["MensagemSucesso"] != null)
    {
        <div class="alert alert-success" role="alert">
            <button type="button" class="close-alert btn btn-danger btn-sm" arial-label="Close">X</button>
            @TempData["MensagemSucesso"]
        </div>
    }

    @if (TempData["MensagemErro"] != null)
    {
        <div class="alert alert-danger" role="alert">
            <button type="button" class="close-alert btn btn-danger btn-sm" arial-label="Close">X</button>
            @TempData["MensagemErro"]
        </div>
    }

<div class="title-position">
    <h1 class="display-4" style=" color:white">Listagem de contatos</h1>
    <a style="border-radius: 6px; border-color: #343a40" class="btn btn-dark" role="button" asp-controller="Contato" asp-action="Criar">Adicionar novo contato</a>
</div>



    <div class="card-table">
        <table class="display" style="width:100%" id="table-contatos">
            <thead>
                <tr style="color: #343a40">
                    <th scope="col">Código</th>
                    <th scope="col">Nome</th>
                    <th scope="col">E-mail</th>
                    <th scope="col">Celular</th>
                    <th scope="col">Ações</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    foreach (ContatoModel contato in Model)
                    {
                        <tr style="color: #343a40">
                            <th scope="row">@contato.Id</th>
                            <td>@contato.Nome</td>
                            <td>@contato.Email</td>
                            <td>@contato.Celular</td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a role="button" class="btn btn-dark" style="margin-right:20px" asp-controller="Contato" asp-route-id="@contato.Id" asp-action="Editar">Editar</a>
                                    <a role="button" class="btn btn-secondary" asp-controller="Contato" asp-route-id="@contato.Id" asp-action="ApagarConfirmacao">Apagar</a>
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr style="color:white" class="odd"><td valign="top" colspan="5">Nenhum contato encontrado</td></tr>
                }
            </tbody>
        </table>
    </div>
</div>