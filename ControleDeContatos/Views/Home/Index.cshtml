@model LoginModel

@{
    ViewData["Title"] = "Página Inicial";
}


<link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
<link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;700&display=swap" rel="stylesheet">
<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;700&family=Sora:wght@400;600&display=swap" rel="stylesheet" />

<style>
    h1, h2, h3 {
        font-family: 'Sora', sans-serif;
        font-weight: 600;
        line-height: 125%;
        letter-spacing: -1px;
        color: #ffffff;
    }

    h1 {
        font-size: 4rem;
        color: #ffffff;
    }

    h2 {
        font-size: 3.2rem;
    }

    h3 {
        font-size: 2.4rem;
    }

    .s-hero {
        padding: 7.2rem 0px;
        margin-top: 8.8rem;
    }

    .text {
        width: 100%;
        max-width: 64.0rem;
    }

    p {
        margin-bottom: 5.6rem;
        max-width: 48.8rem;
        line-height: 150%;
        color: #ffffff;
    }

    .s-hero .text .btn-primary {
        padding: 1.7rem 3.7rem;
    }

    .image {
        width: 100%;
        max-width: 48.8rem;
        height: 18.6rem;
        background-color: var(--gray-colors-800);
        display: flex;
        justify-content: center
    }

    .input-email {
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 4px;
        font-size: 16px;
        width: 300px;
    }

    .inputEmail {
        height: 45px;
    }

    .btnEmail {
        width: 300px;
        height: 20px
    }

    .secondSection {
        padding-top: 50px;
    }


    .home-section {
        padding-top: 40px;
    }
</style>

<section class="home-section">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <h2>Gerenciar seus contatos nunca foi tão simples e fácil</h2>
                <div class="row pt-4">
                    <div style="width:400px">
                        <button type="submit" style="border-radius: 6px; border-color: #343a40" class="btn btn-dark btn-block">Acesso rápido</button>
                    </div>
                </div>                @*<p> Cadastre seus contatos e fortaleça seus relacionamentos.</p>*@
            </div>
            @*<div class="col-md-4 image">
                <img src="/homeLogado.svg" alt="imagem hero" />
            </div>*@
        </div>
    </div>
</section>

<section class="secondSection">
    <div class="container">
        <div class="row">
            <div class="input-group col-md-6">

            </div>
        </div>
    </div>
</section>