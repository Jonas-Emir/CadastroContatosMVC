@model List<UsuarioModel>
@{
    ViewData["Title"] = "Listagem de usuários";
}
<style>
    .title-position {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-top: 30px;
    }

    .card-table {
        padding: 29px 29px;
        background-color: white;
        border-radius: 5px;
        margin-top: 10px;
    }

    .display {
        background-color: #f9f9f9;
        border-radius: 5px;
    }
</style>

<div class="text-center">
    @if (TempData["MensagemSucesso"] != null)
    {
        <div class="alert alert-success" role="alert">
            <button type="button" class="close-alert btn btn-danger btn-sm" arial-label="Close">X</button>
            @TempData["MensagemSucesso"]
        </div>
    }
    @if (TempData["MensagemErro"] != null)
    {
        <div class="alert alert-danger" role="alert">
            <button type="button" class="close-alert btn btn-danger btn-sm" arial-label="Close">X</button>
            @TempData["MensagemErro"]
        </div>
    }

    <div class="title-position">
        <h2 class="display-4" style=" color:white">Listagem de usuários</h2>
        <a style="border-radius: 6px; border-color: #343a40" class="btn btn-dark" role="button" asp-controller="Usuario" asp-action="Criar">+ Adicionar novo usuário</a>
    </div>

    <div class="card-table">
        <table id="table-usuarios" style="width:100%" class="display">
            <thead>
                <tr style="color: #343a40">
                    <th scope="col">Código</th>
                    <th scope="col">Nome</th>
                    <th scope="col">Login</th>
                    <th scope="col">E-mail</th>
                    <th scope="col">Perfil</th>
                    <th scope="col">Total de Contatos</th>
                    <th scope="col">Data de Cadastro</th>
                    <th scope="col">Ações</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    foreach (var usuario in Model)
                    {
                        <tr>
                            <th scope="row">@usuario.Id</th>
                            <td>@usuario.Nome</td>
                            <td>@usuario.Login</td>
                            <td>@usuario.Email</td>
                            <td>@(usuario.Perfil == ControleDeContatos.Enums.PerfilEnum.Admin ? "Administrador" : "Padrão") </td>
                            <td>
                                <a href="javascript:" usuario-id="@usuario.Id" class="btn btn-success btn-sm btn-total-contatos">
                                    @(usuario.Contatos != null && usuario.Contatos.Any() ? usuario.Contatos.Count() : 0)
                                </a>
                            </td>
                            <td>@usuario.DataCadastro</td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a role="button" class="btn-sm btn-dark"  style="margin-right:10px"  asp-controller="Usuario" asp-route-id="@usuario.Id" asp-action="Editar">Editar</a>
                                    <a role="button" class="btn-sm btn-danger" asp-controller="Usuario" asp-route-id="@usuario.Id" asp-action="ApagarConfirmacao">Apagar</a>
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr class="odd"><td valign="top" colspan="5">Nenhum usuário encontrado</td></tr>
                }
            </tbody>
        </table>
        <div id="modalContatosUsuario" class="modal" tabindex="-1">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Listagem de Contatos</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <div id="listaContatosUsuario"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
