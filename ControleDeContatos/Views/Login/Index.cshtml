@model LoginModel
@{
    Layout = "_LayoutDeslogado";
    ViewData["Title"] = "Login";

    <style>
        .form-container {
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
            padding: 20px;
            border-radius: 6px;
            margin-top: 40px;
        }

        .chkSalvaSenha {
            justify-content: space-between;
        }

        .cadastrarAgora {
            text-align: center;
            margin-top: 2px;
            display: flex;
            font-size: 12px;
            justify-content: center;
            margin-top: 15px;
        }

        .cadastrarLink {
            margin-left: 5px;
        }
    </style>

    @if (TempData["MensagemErroLogin"] != null)
    {
        <div class="alert alert-danger" role="alert">
            <button type="button" class="close-alert btn btn-dange btn-sm" arial-label="Close">X</button>
            @TempData["MensagemErroLogin"]
        </div>
    }

    @if (TempData["MensagemSucesso"] != null)
    {
        <div class="alert alert-success" role="alert">
            <button type="button" class="close-alert btn btn-danger btn-sm" arial-label="Close">X</button>
            @TempData["MensagemSucesso"]
        </div>
    }

    <form class="col-md-4 mx-auto form-container pt-4" asp-controller="Login" asp-action="Entrar" method="post">
        <div class="text-center">
            <h3 class="display-6" style="color:#ffffff">
                Entre
            </h3>
        </div>
        <div class="row m-3">
            <label for="login" style="color: #ffffff; margin-bottom: 4px" class="form-label">Login</label>
            <input type="text" asp-for="Login" class="form-control" id="login" placeholder="Digite seu login">
            @Html.ValidationMessageFor(x => x.Login)
        </div>
        <div class="row g-3 ml-3 mr-3">
            <label for="senha" style="color: #ffffff; margin-bottom: 4px" class="form-label">Senha</label>
            <input type="password" asp-for="Senha" class="form-control" id="senha" placeholder="Digite sua senha">
            @Html.ValidationMessageFor(x => x.Senha)
        </div>
        <div class="row g-3 ml-3 mr-3 chkSalvaSenha">
            <div class="form-check">
                <input type="checkbox" class="form-check-input" style="margin-top: 0.4rem; margin-left:-1.10rem" id="flexCheckDefault">
                <label style="font-size: 12px; color: #ffffff" class="form-check-label" for="">
                    Lembrar de mim
                </label>
            </div>
            <div>
                <a asp-action="RedefinirSenha" asp-controller="Login" style="font-size: 12px; color: #343a40" class="text-gradient font-weight-bold rounded-6">Esqueceu sua senha?</a>
            </div>
        </div>
        <div class="row g-3 pt-4 d-flex justify-content-center">
            <div style="width:200px" class="">
                <button type="submit" style="border-radius: 6px; border-color: #343a40" class="btn btn-dark btn-block">Entrar</button>
            </div>
        </div>

        <div class="cadastrarAgora">
            <p style="color: #ffffff; margin-bottom:0px;">
                Não tem cadastro?
            </p>
            <a class="text-gradient font-weight-bold cadastrarLink" role="button" style="color: #343a40 " asp-controller="Cadastro" asp-action="NovoCadastro">Cadastre-se agora</a>
        </div>
    </form>
}

