@model LoginModel
@{
    Layout = "_LayoutDeslogado";
    ViewData["Title"] = "Login";

    @if (TempData["MensagemErroLogin"] != null)
    {
        <div class="alert alert-danger" role="alert">
            <button type="button" class="close-alert btn btn-dange btn-sm" arial-label="Close">X</button>
            @TempData["MensagemErroLogin"]
        </div>
    }

    @if (TempData["MensagemSucesso"] != null)
    {
        <div class="alert alert-success" role="alert">
            <button type="button" class="close-alert btn btn-danger btn-sm" arial-label="Close">X</button>
            @TempData["MensagemSucesso"]
        </div>
    }

    <form class="col-md-4 mx-auto pt-4 bg-light" style="border-radius:6px" asp-controller="Login" asp-action="Entrar" method="post">
        <div class="text-center">
            <h3 class="display-6" style="color:#6f7881">
                Entre
            </h3>
        </div>
        <div class="row m-3">
            <label for="login" style="color:#6f7881;margin-bottom: 4px" class="form-label">Login</label>
            <input type="text" asp-for="Login" class="form-control" id="login">
            @Html.ValidationMessageFor(x => x.Login)
        </div>
        <div class="row g-3 ml-3 mr-3">
            <label for="senha" style="color:#6f7881;margin-bottom: 4px" class="form-label">Senha</label>
            <input type="password" asp-for="Senha" class="form-control" id="senha">
            @Html.ValidationMessageFor(x => x.Senha)
        </div>
        <div class="row g-3 ml-3 mr-3 justify-content-center">
            <div class="form-check">
                <input type="checkbox" class="form-check-input" style="margin-top: 0.4rem; margin-left:-1.10rem" id="flexCheckDefault">
                <label style="font-size:12px; color:#6f7881 " class="form-check-label" for="">
                    Lembrar de mim
                </label>
            </div>
            <div class="ml-5">
                <a asp-action="RedefinirSenha" asp-controller="Login" style="font-size:12px; color:#1b6ec2" class="text-gradient font-weight-bold rounded-6">Esqueceu sua senha?</a>
            </div>

        </div>
        <div class="row g-3 pt-4 pb-4 d-flex justify-content-center">
            <div style="width:200px" class="">
                <button type="submit" style="border-radius:6px; border-color:#f8f9fa" class="btn btn-primary btn-block">Entrar</button>
            </div>
        </div>
    </form>
}
    <div class="row g-3 mt-2 d-flex justify-content-center">
        <div class="d-flex">
            <p style="color:#6f7881; margin-right: 82px">
                Não tem cadastro?
            </p>
            <a class="text-gradient font-weight-bold" role="button" style="color:#1b6ec2" asp-controller="Cadastro" asp-action="NovoCadastro">Cadastre-se agora</a>
        </div>
    </div>

