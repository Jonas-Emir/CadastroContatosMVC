</form>
<div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
    <div class="collapse navbar-collapse" style="justify-content: flex-end;" id="navbarScroll">
        <ul class="navbar-nav me-auto my-2 my-lg-0 navbar-nav-scroll">
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-controller="Contato" asp-action="Index">Contatos</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-controller="Usuario" asp-action="Index">Usuários</a>
            </li>
            <li class="dropdown">
                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                    <img src="" alt="DropDown para Seleção" style="width:45px;height:35px;">
                </a>
                @*VERIFICAR URL DA IMG CARRINHO ICON*@
                <ul class="dropdown-menu">
                    <li class="dropdown-item">
                        <a class="dropdown-item" asp-area="" asp-controller="AlterarSenha" asp-action="Index">Alterar Senha</a>
                    </li>
                    <li class="dropdown-item">
                        <a class="dropdown-item" asp-area="" asp-controller="Login" asp-action="Sair">Ajuda</a>
                    </li>
                    <li class="dropdown-item">
                        <a class="dropdown-item" asp-area="" asp-controller="Login" asp-action="Sair">Sair</a>
                    </li>
                </ul>
            </li>
        </ul>
    </div>
</div>
