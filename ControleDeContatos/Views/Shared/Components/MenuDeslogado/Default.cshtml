@model UsuarioModel

<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,400,0,0" />

<style>
    .navbarCabecalho {
        padding-left: 90px;
        padding-right: 90px;
        height: 60px;
    }

    .nav-itemLogo {
        padding-right: 80px;
    }

    .navbar-brand {
        font-weight: bold;
    }

    .navbar-nav .nav-link {
        color: #333;
    }

        .navbar-nav .nav-link:hover {
            color: #007bff;
        }

    .justifyNav {
        justify-content: space-between;
    }

    .navitemConta {
        color: #333;
    }

    .logo {
        display: inline-block;
        font-size: 24px;
        font-weight: bold;
        color: #333;
        text-decoration: none;
        font-family: "Roboto", sans-serif;
    }

        .logo img {
            width: 40px;
            height: 40px;
            vertical-align: middle;
            margin-right: 10px;
        }

    .navHeader {
        font-family: "Arial", sans-serif;
    }

    .material-symbols-outlined {
        font-variation-settings: 'FILL' 0, 'wght' 400, 'GRAD' 0, 'opsz' 48;
    }
</style>

<nav class="navbar navbar-expand-lg navbar-light">
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
            aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="navbarCabecalho collapse navbar-collapse justifyNav" id="navbarNav">
        <div>
            <ul class="navbar-nav">
                <li class="nav-item nav-itemLogo">
                    <a class="navbar-brand logo" asp-area="" asp-controller="Home" asp-action="Index">
                        Nexus
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="Contato" asp-action="Index">Contatos</a>
                </li>
                @if (Model.Perfil == ControleDeContatos.Enums.PerfilEnum.Admin)
                {
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Usuario" asp-action="Index">Gerenciamento de Usuários</a>
                    </li>
                }
                <li class="nav-item">
                    <a class="nav-link" href="#">Sobre</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Ajuda</a>
                </li>
            </ul>
        </div>
        <div class="nav-item dropdown ">
            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                Conta
            </a>
            <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                <a class="dropdown-item" asp-area="" asp-controller="AlterarSenha" asp-action="Index">Alterar Senha</a>
                <a class="dropdown-item" asp-area="" asp-controller="Login" asp-action="Sair">Sair</a>
            </div>
        </div>
    </div>
</nav>

<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>